<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="20dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cd_recyclerView_background"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@color/navyBlue"
        app:cardElevation="2dp"
        app:cardCornerRadius="15dp"
        android:foreground="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/iv_recyclerView_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cloudy_bg"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_itemRv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"
            android:background="@color/none"
            android:text="酉阳"
            android:textColor="@color/white"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tv_itemRv_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_gravity="center_vertical"
            android:background="@color/none"
            android:text="-36℃"
            android:textColor="@color/white"
            android:textSize="25sp"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>